rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Teams - Everyone can see company structure
    match /teams/{teamId} {
      allow read: if true; // Anyone can see teams
      allow write: if request.auth != null;
    }
    
    // Profiles - Everyone can see company directory
    match /profiles/{userId} {
      allow read: if true; // Anyone can see profiles (company directory)
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Tasks - Role-based access with team hierarchy
    match /tasks/{taskId} {
      allow read: if request.auth != null && (
        // Staff/HR: Only their own assigned tasks
        (get(/databases/$(database)/documents/profiles/$(request.auth.uid)).data.role in ['Staff', 'HR'] && 
         resource.data.assigneeIds != null && 
         request.auth.uid in resource.data.assigneeIds) ||
        // Manager: Own assigned tasks + team tasks (same team only)
        (get(/databases/$(database)/documents/profiles/$(request.auth.uid)).data.role == 'Manager' && 
         (resource.data.assigneeIds != null && request.auth.uid in resource.data.assigneeIds) ||
         (get(/databases/$(database)/documents/profiles/$(request.auth.uid)).data.teamId == 
          get(/databases/$(database)/documents/profiles/$(resource.data.userId)).data.teamId)) ||
        // Director: Own assigned tasks + team + descendants
        (get(/databases/$(database)/documents/profiles/$(request.auth.uid)).data.role == 'Director' && 
         (resource.data.assigneeIds != null && request.auth.uid in resource.data.assigneeIds) ||
         // Can see team and descendant teams (simplified - will be refined in app logic)
         true) ||
        // Senior Management: All tasks
        get(/databases/$(database)/documents/profiles/$(request.auth.uid)).data.role == 'Senior Management'
      );
      allow write: if request.auth != null && (
        // Staff/HR: Only their own assigned tasks
        (get(/databases/$(database)/documents/profiles/$(request.auth.uid)).data.role in ['Staff', 'HR'] && 
         resource.data.assigneeIds != null && 
         request.auth.uid in resource.data.assigneeIds) ||
        // Manager: Own assigned tasks + team tasks
        (get(/databases/$(database)/documents/profiles/$(request.auth.uid)).data.role == 'Manager' && 
         (resource.data.assigneeIds != null && request.auth.uid in resource.data.assigneeIds) ||
         (get(/databases/$(database)/documents/profiles/$(request.auth.uid)).data.teamId == 
          get(/databases/$(database)/documents/profiles/$(resource.data.userId)).data.teamId)) ||
        // Director: Own assigned tasks + team + descendants
        (get(/databases/$(database)/documents/profiles/$(request.auth.uid)).data.role == 'Director' && 
         (resource.data.assigneeIds != null && request.auth.uid in resource.data.assigneeIds) ||
         true) ||
        // Senior Management: All tasks
        get(/databases/$(database)/documents/profiles/$(request.auth.uid)).data.role == 'Senior Management'
      );
    }
    
    // Projects - Role-based access with team hierarchy
    match /projects/{projectId} {
      allow read: if request.auth != null && (
        // Staff/HR: Only their own projects
        (get(/databases/$(database)/documents/profiles/$(request.auth.uid)).data.role in ['Staff', 'HR'] && 
         resource.data.userId == request.auth.uid) ||
        // Manager: Own projects + team projects
        (get(/databases/$(database)/documents/profiles/$(request.auth.uid)).data.role == 'Manager' && 
         (resource.data.userId == request.auth.uid ||
          get(/databases/$(database)/documents/profiles/$(request.auth.uid)).data.teamId == 
          get(/databases/$(database)/documents/profiles/$(resource.data.userId)).data.teamId)) ||
        // Director: Own projects + team + descendants
        (get(/databases/$(database)/documents/profiles/$(request.auth.uid)).data.role == 'Director' && 
         (resource.data.userId == request.auth.uid || true)) ||
        // Senior Management: All projects
        get(/databases/$(database)/documents/profiles/$(request.auth.uid)).data.role == 'Senior Management'
      );
      allow write: if request.auth != null && (
        // Staff/HR: Only their own projects
        (get(/databases/$(database)/documents/profiles/$(request.auth.uid)).data.role in ['Staff', 'HR'] && 
         resource.data.userId == request.auth.uid) ||
        // Manager: Own projects + team projects
        (get(/databases/$(database)/documents/profiles/$(request.auth.uid)).data.role == 'Manager' && 
         (resource.data.userId == request.auth.uid ||
          get(/databases/$(database)/documents/profiles/$(request.auth.uid)).data.teamId == 
          get(/databases/$(database)/documents/profiles/$(resource.data.userId)).data.teamId)) ||
        // Director: Own projects + team + descendants
        (get(/databases/$(database)/documents/profiles/$(request.auth.uid)).data.role == 'Director' && 
         (resource.data.userId == request.auth.uid || true)) ||
        // Senior Management: All projects
        get(/databases/$(database)/documents/profiles/$(request.auth.uid)).data.role == 'Senior Management'
      );
    }
    
    // Subtasks - Same logic as tasks
    match /subtasks/{subtaskId} {
      allow read: if request.auth != null && (
        (get(/databases/$(database)/documents/profiles/$(request.auth.uid)).data.role in ['Staff', 'HR'] && 
         resource.data.assigneeIds != null && 
         request.auth.uid in resource.data.assigneeIds) ||
        (get(/databases/$(database)/documents/profiles/$(request.auth.uid)).data.role == 'Manager' && 
         (resource.data.assigneeIds != null && request.auth.uid in resource.data.assigneeIds) ||
         (get(/databases/$(database)/documents/profiles/$(request.auth.uid)).data.teamId == 
          get(/databases/$(database)/documents/profiles/$(resource.data.userId)).data.teamId)) ||
        (get(/databases/$(database)/documents/profiles/$(request.auth.uid)).data.role == 'Director' && 
         (resource.data.assigneeIds != null && request.auth.uid in resource.data.assigneeIds) ||
         true) ||
        get(/databases/$(database)/documents/profiles/$(request.auth.uid)).data.role == 'Senior Management'
      );
      allow write: if request.auth != null && (
        (get(/databases/$(database)/documents/profiles/$(request.auth.uid)).data.role in ['Staff', 'HR'] && 
         resource.data.assigneeIds != null && 
         request.auth.uid in resource.data.assigneeIds) ||
        (get(/databases/$(database)/documents/profiles/$(request.auth.uid)).data.role == 'Manager' && 
         (resource.data.assigneeIds != null && request.auth.uid in resource.data.assigneeIds) ||
         (get(/databases/$(database)/documents/profiles/$(request.auth.uid)).data.teamId == 
          get(/databases/$(database)/documents/profiles/$(resource.data.userId)).data.teamId)) ||
        (get(/databases/$(database)/documents/profiles/$(request.auth.uid)).data.role == 'Director' && 
         (resource.data.assigneeIds != null && request.auth.uid in resource.data.assigneeIds) ||
         true) ||
        get(/databases/$(database)/documents/profiles/$(request.auth.uid)).data.role == 'Senior Management'
      );
    }
    
    // Meetings - Everyone can see company meetings
    match /meetings/{meetingId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
  }
}